<p id="notice"><%= notice %></p>

<h1>Gossips</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gossips.each do |gossip| %>
      <tr>
        <td><%= gossip.content %></td>
        <td><%= link_to 'Afficher', gossip %></td>
        <td><%= link_to 'Publier', edit_gossip_path(gossip) %></td>
        <td><%= link_to 'Effacer', gossip, method: :delete, data: { confirm: 'Tu veux vraiment effacer cette mine ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

